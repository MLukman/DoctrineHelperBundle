{
    "name": "mlukman/doctrine-helper-bundle",
    "version": "1.1.4",
    "description": "A set of classes to simplify Symfony-Doctrine integration",
    "type": "symfony-bundle",
    "require": {
        "php": ">=8.1",
        "doctrine/doctrine-bundle": "^2.8",
        "doctrine/orm": "^2.8|^3.0",
        "imagine/imagine": "^1.3",
        "phpdocumentor/reflection-docblock": "^5.3",
        "ramsey/uuid-doctrine": "^2.0",
        "symfony/framework-bundle": "^6.1|^7.0",
        "symfony/property-access": "^6.1|^7.0",
        "symfony/runtime": "^6.1|^7.0",
        "symfony/serializer": "^6.1|^7.0",
        "symfony/validator": "^6.1|^7.0"
    },
    "suggest": {
        "symfony/security-bundle": "^6.1|^7.0"
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "MLukman\\DoctrineHelperBundle\\": "src/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Muhammad Lukman Nasaruddin",
            "email": "lukman.nasaruddin@gmail.com"
        }
    ],
    "autoload-dev": {
        "psr-4": { 
            "MLukman\\DoctrineHelperBundle\\Tests\\": "tests/" 
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/debug-bundle": "^6.1|^7.0",
        "symfony/phpunit-bridge": "^6.1|^7.0",
        "symfony/yaml": "^6.1|^7.0"
    }
}
